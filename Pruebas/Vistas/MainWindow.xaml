<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Pruebas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Pruebas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WeatherApp"
    mc:Ignorable="d">


    <NavigationView
        x:Name="nv"
        IsSettingsVisible="False"
        PaneDisplayMode="Top"
        SelectionChanged="cambiarPagina">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Inicio" Tag="Inicio" />
            <NavigationViewItem Content="Agregar/Quitar Provincias" Tag="Provincias" />
        </NavigationView.MenuItems>
        <Frame x:Name="navegador" />
    </NavigationView>
</Window>

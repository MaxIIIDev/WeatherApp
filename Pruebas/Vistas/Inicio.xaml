<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Pruebas.Vistas.Inicio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Pruebas.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource AppBarBorderThemeBrush}"
    
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />



        </Grid.ColumnDefinitions>
        <Button
            x:Name="ButtonBack"
            Grid.Column="0"
            Margin="20"
            Padding="20"
            Background="{ThemeResource SystemAccentColorLight1}"
            Foreground="White">
            <FontIcon Glyph="&#xE72B;" />
        </Button>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".8*" />
                <ColumnDefinition Width=".5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".6*" />
                <RowDefinition Height=".4*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="30"
                Padding="10"
                VerticalAlignment="Bottom"
                BorderBrush="{ThemeResource SystemAccentColorLight1}"
                BorderThickness="1.6"
                CornerRadius="10">
                <TextBlock
                    x:Name="CityNameTextBlock"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    Text="San luis, Argentina" />
                <Ellipse
                    Width="150"
                    Height="150"
                    Margin="10"
                    Stroke="{ThemeResource SystemAccentColorLight1}"
                    StrokeThickness="5.5">
                    <Ellipse.Fill>
                        <ImageBrush
                            x:Name="principalForecastImage"
                            ImageSource="C:\Users\Max\Downloads\113.webp"
                            Stretch="Uniform" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock
                    x:Name="forecastImageText"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Parcialmente nublado" />
                <TextBlock
                    x:Name="Hour"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Text="Hour: 20:20" />
            </StackPanel>


            <StackPanel
                Grid.Row="1"
                Margin="0"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="{ThemeResource SystemAccentColorLight1}"
                BorderThickness="1"
                CornerRadius="10"
                Orientation="Horizontal">
                <StackPanel>
                    <Ellipse
                        Width="100"
                        Height="100"
                        Margin="20"
                        Stroke="White"
                        StrokeThickness="1.5">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="FirstCircleForecastImage" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        x:Name="FirstCircleDayName"
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Viernes" />
                    <TextBlock
                        x:Name="FirstCircleTemperatureMax"
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="33°" />
                    <TextBlock
                        x:Name="FirstCircleTemperatureMin"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="20°" />
                </StackPanel>
                <StackPanel>
                    <Ellipse
                        Width="100"
                        Height="100"
                        Margin="20"
                        Stroke="White"
                        StrokeThickness="1.5">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="SecondCircleForecastImage" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        x:Name="SecondCircleDayName"
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Sabado" />
                    <TextBlock
                        x:Name="SecondCircleTemperatureMax"
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="32°" />
                    <TextBlock
                        x:Name="SecondCircleTemperatureMin"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="22°" />

                </StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse
                        Width="100"
                        Height="100"
                        Margin="20"
                        Stroke="White"
                        StrokeThickness="1.5">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="ThirdCircleForecastImage" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        x:Name="ThirdCircleDayName"
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Domingo" />
                    <TextBlock
                        x:Name="ThirdCircleTemperatureMax"
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="22°" />
                    <TextBlock
                        x:Name="ThirdCircleTemperatureMin"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="11°" />

                </StackPanel>

            </StackPanel>
            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height=".33*" />
                    <RowDefinition Height=".33*" />
                    <RowDefinition Height=".33*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Padding="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{ThemeResource SystemAccentColorLight1}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Text="Temperatura:" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <TextBlock
                                x:Name="principalMaxTemperature"
                                Margin="3"
                                Padding="10"
                                FontSize="35"
                                Text="33°" />
                            <TextBlock
                                x:Name="principalNowTemperature"
                                Margin="3"
                                Padding="10"
                                FontSize="35"
                                Text="25°" />
                            <TextBlock
                                x:Name="principalMinTemperature"
                                Margin="3"
                                Padding="10"
                                FontSize="35"
                                Text="20°" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Padding="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{ThemeResource SystemAccentColorLight1}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Orientation="Horizontal">

                    <StackPanel
                        Padding="10"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock
                            Padding="10"
                            FontSize="40"
                            Text="Precipitacion:" />
                        <TextBlock
                            x:Name="nowPrecipitation"
                            Padding="10"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Text="20mm" />
                    </StackPanel>

                </StackPanel>
                <StackPanel
                    Grid.Row="3"
                    Padding="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{ThemeResource SystemAccentColorLight1}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Orientation="Horizontal">
                    <StackPanel
                        Padding="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock
                            Padding="10"
                            FontSize="40"
                            Text="Viento Km/h:" />
                        <TextBlock
                            x:Name="nowWind"
                            Padding="10"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Text="40km/h" />
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Grid>
        <Button
            x:Name="ButtonNext"
            Grid.Column="2"
            Margin="10"
            Padding="20"
            Background="{ThemeResource SystemAccentColorLight1}"
            Foreground="White">
            <FontIcon Glyph="&#xE72A;" />
        </Button>
        <Button
            x:Name="ButtonDeleteCity"
            Grid.Column="2"
            Margin="20"
            Padding="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            BorderBrush="Red"
            BorderThickness="1">
            <FontIcon
                FontSize="35"
                Foreground="Red"
                Glyph="&#xE74D;" />
        </Button>

    </Grid>
</Page>
